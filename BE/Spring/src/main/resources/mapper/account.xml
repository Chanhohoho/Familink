<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.famillink.model.mapper.AccountMapper">
    <select id="findUserByEmail" parameterType="string" resultType="Account">
        SELECT `uid`,
               `email`,
               `pw`,
               `address`,
               `phone`,
               `nickname`,
               `role`,
               `sdate`,
               `refresh_token`,
               `salt`,
               `level`
        FROM account
        WHERE `email` = #{email}
    </select>

    <select id="findUserByUid" parameterType="long" resultType="Account">
        SELECT `uid`,
               `email`,
               `pw`,
               `address`,
               `phone`,
               `nickname`,
               `role`,
               `sdate`,
               `salt`,
               `level`,
               `model_path` AS path
        FROM account
        WHERE `uid` = #{uid}
    </select>
    
    <select id="findUserFamily" parameterType="string" resultType="account">
        SELECT *
        FROM account a JOIN member m
            ON a.uid = m.user_uid
        WHERE #{email} = a.email
    </select>

    <insert id="signup" parameterType="Account">
        INSERT INTO account (`email`, `pw`, `address`, `phone`, `nickname`)
        VALUES (#{email}, #{pw}, #{address}, #{phone}, #{nickname})
        <selectKey resultType="long" keyProperty="uid" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="setRefreshToken" parameterType="account">
        UPDATE account
        SET `refresh_token` = #{refresh_token}
        WHERE `uid` = #{uid};
    </update>

    <update id="setSalt">
        UPDATE account
        SET `salt` = #{salt}
        WHERE `uid` = #{uid}
    </update>

    <select id="getSalt" parameterType="long" resultType="string">
        SELECT `salt`
        FROM account
        WHERE uid = #{uid};
    </select>

    <update id="checkEmail" parameterType="long">
        UPDATE account
        SET `level` = 1
        WHERE `uid` = #{uid};
    </update>

    <update id="setPassword">
        UPDATE account
        SET `pw` = #{pw}
        WHERE `email` = #{email};
    </update>

</mapper>