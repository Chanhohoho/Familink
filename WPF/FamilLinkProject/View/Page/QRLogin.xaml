<UserControl x:Class="FamilLinkProject.View.Page.QRLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FamilLinkProject.View.Page"
             mc:Ignorable="d" 
             d:DesignHeight="1320" d:DesignWidth="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0">
                <TextBlock 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Text="QR 로그인을 진행해주세요." Foreground="white" />
            </Viewbox>
            <Viewbox Grid.Row="1">
                <Image 
                   Source="pack://application:,,,/Resources/QR_Logo.jpg"/>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
